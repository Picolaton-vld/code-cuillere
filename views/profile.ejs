.carousel {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 300px;
  height: 300px;
  overflow: hidden;
  margin-bottom: 10px;
}
.carousel-images img {
  display: none;
  max-width: 100%;
  max-height: 100%;
  margin: 0 auto;
}
.carousel-images img.active {
  display: block;
}
