<%- include('partials/header') %>
<style>
.profile-posts-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 32px;
  margin-top: 32px;
}
.profile-post-card {
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 2px 16px #0001, 0 0 0 1px #ececec;
  max-width: 320px;
  min-width: 220px;
  padding: 0 0 12px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: box-shadow 0.18s;
  margin-bottom: 20px;
  position: relative;
}
.profile-post-card:hover {
  box-shadow: 0 4px 32px #0002, 0 0 0 2px #d1c4e9;
}
.profile-post-img,
.carousel {
  width: 100%;
  border-radius: 18px 18px 0 0;
  background: #fafafa;
  margin-bottom: 12px;
  max-width: 320px;
  min-height: 140px;
  max-height: 220px;
  object-fit: cover;
  overflow: hidden;
}

.profile-post-caption {
  font-size: 1em;
  padding: 0 12px;
  margin-bottom: 6px;
  color: #222;
  width: 100%;
  text-align: left;
}
.profile-post-caption strong {
  color: #6d38a8;
}
.profile-post-link {
  color: #6d38a8;
  text-decoration: underline;
  font-size: .97em;
  font-weight: 500;
  transition: color .16s;
  margin-bottom: 10px;
}
.profile-post-link:hover {
  color: #c2185b;
}
.profile-post-actions {
  display: flex;
  gap: 9px;
  margin: 10px 0 2px 0;
  align-items: center;
}
.profile-post-actions .like-btn {
  background: transparent;
  border: none;
  font-size: 1.15em;
  cursor: pointer;
  padding: 0 6px;
}

.profile-post-actions .btn-edit, .profile-post-actions .btn-delete {
  padding: 6px 11px;
  border-radius: 18px;
  border: none;
  font-size: 1em;
  cursor: pointer;
  margin-right: 4px;
  display: inline-flex;
  align-items: center;
  gap: 3px;
  background: #e3f2fd;
  color: #1976d2;
  transition: background .18s, color .18s;
}
.profile-post-actions .btn-delete {
  background: #ffebee;
  color: #c62828;
}
.profile-post-actions .btn-edit:hover {
  background: #bbdefb;
  color: #1565c0;
}
.profile-post-actions .btn-delete:hover {
  background: #ffcdd2;
  color: #fff;
}
/* Comments thread style */
.profile-post-comments {
  width: 100%;
  padding: 0 13px 0 13px;
  font-size: .96em;
  margin-bottom: 8px;
}
.comment-thread input[type="text"] {
  border-radius: 4px;
  border: 1px solid #ccc;
  padding: 5px;
}
.comment-thread button {
  border-radius: 4px;
  border: none;
  background: #e1eaff;
  color: #2e3b7c;
  padding: 5px 12px;
  margin-left: 5px;
  cursor: pointer;
}
.comment-thread a {
  color: #6d38a8;
  cursor: pointer;
  text-decoration: underline;
  font-size: .95em;
  margin-left: 8px;
}
/* Carousel styles */
.carousel {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 100%;
  height: 220px;
  overflow: hidden;
  margin-bottom: 10px;
}
.carousel-images img {
  display: none;
  max-width: 100%;
  max-height: 210px;
  margin: 0 auto;
  border-radius: 18px 18px 0 0;
}
.carousel-images img.active {
  display: block;
}
.carousel-prev, .carousel-next {
  background: rgba(0,0,0,0.4);
  color: #fff;
  border: none;
  font-size: 2em;
  width: 36px;
  height: 36px;
  cursor: pointer;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  border-radius: 50%;
  transition: background .15s;
}
.carousel-prev { left: 5px; }
.carousel-next { right: 5px; }
.carousel-prev:hover,
.carousel-next:hover {
  background: rgba(98,0,238,0.4);
}
</style>

<main class="container">
  <div class="profile-header">
    <img src="<%= user.avatar || '/images/default-avatar.jpg' %>" alt="Avatar" style="width:100px;height:100px;border-radius:50%;">
    <div class="profile-info">
      <h2><%= user.username %></h2>
      <div class="profile-stats">
        <div class="profile-stat">
          <strong><%= posts.length %></strong> publications
        </div>
        <div class="profile-stat">
          <strong><%= user.followers ? user.followers.length : 0 %></strong> abonn√©s
        </div>
        <div class="profile-stat">
          <strong><%= user.following ? user.following.length : 0 %></strong> abonnements
        </div>
      </div>
    </div>
  </div>
  <form action="/profile/avatar" method="POST" enctype="multipart/form-data">
    <input type="file" name="avatar" accept="image/*" required>
    <button type="submit">Mettre √† jour l'avatar</button>
  </form>

  <div class="profile-posts-grid">
    <% function renderComments(comments, parentId, level, postId) { %>
      <% comments.filter(c => String(c.parentId) === String(parentId)).forEach(c => { %>
        <div style="margin-left:<%= level*24 %>px; border-left:1.5px solid #eee; padding-left:10px; margin-top:7px;">
          <strong><%= c.userId && c.userId.username ? c.userId.username : "Utilisateur" %></strong>
          <span style="color:#bbb; font-size:0.9em;"> <%= new Date(c.createdAt).toLocaleString() %></span><br>
          <%= c.text %>
          <a href="#" onclick="event.preventDefault();document.getElementById('reply-<%= postId %>-<%= c._id %>').style.display='block';">R√©pondre</a>
          <form id="reply-<%= postId %>-<%= c._id %>" action="/comment/<%= postId %>" method="POST" class="comment-thread" style="display:none; margin-top:8px;">
            <input type="hidden" name="parentId" value="<%= c._id %>">
            <input type="text" name="comment" placeholder="Votre r√©ponse..." required style="width:70%;">
            <button type="submit" style="padding:3px 12px;">Envoyer</button>
          </form>
          <% renderComments(comments, c._id, level+1, postId); %>
        </div>
      <% }) %>
    <% } %>
    <% posts.forEach(function(post) { %>
      <div class="profile-post-card">
        <!-- Carrousel -->
        <div class="carousel" data-post="<%= post._id %>">
          <button class="carousel-prev" onclick="prevSlide('<%= post._id %>')" type="button">&#8249;</button>
          <div class="carousel-images">
            <% post.images.forEach(function(img, idx) { %>
              <img src="<%= img %>" alt="Image du post" class="carousel-image <%= idx === 0 ? 'active' : '' %>" data-idx="<%= idx %>">
            <% }) %>
          </div>
          <button class="carousel-next" onclick="nextSlide('<%= post._id %>')" type="button">&#8250;</button>
        </div>
        <!-- L√©gende -->
        <div class="profile-post-caption">
          <strong><%= post.userId.username %></strong>
          <span><%= post.caption %></span>
        </div>
        <a href="/post/<%= post._id %>" class="profile-post-link">Voir le post</a>
        <!-- Actions -->
        <div class="profile-post-actions">
          <form action="/like/<%= post._id %>" method="POST" style="display:inline;">
            <button type="submit" class="like-btn">
              <%= post.likes && post.likes.some(function(like) { return like.equals(user._id); }) ? "üíñ" : "ü§ç" %>
            </button>
          </form>
          <span><%= post.likes.length %> likes</span>
          <a href="/post/<%= post._id %>/edit" class="btn btn-edit"><i class="fas fa-edit"></i></a>
          <form action="/post/<%= post._id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Supprimer ce post ?');">
            <button type="submit" class="btn btn-delete"><i class="fas fa-trash"></i></button>
          </form>
        </div>
        <!-- Commentaires Thread√©s -->
        <div class="profile-post-comments comment-thread">
          <% if (post.comments && post.comments.length) { %>
            <% renderComments(post.comments, null, 0, post._id); %>
          <% } %>
          <form action="/comment/<%= post._id %>" method="POST" class="comment-form" style="margin-top:10px;">
            <input type="text" name="comment" placeholder="Ajouter un commentaire..." required>
            <button type="submit">Publier</button>
          </form>
        </div>
      </div>
    <% }); %>
  </div>
</main>
<%- include('partials/footer') %>

