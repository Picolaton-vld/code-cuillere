<%- include('partials/header') %>
<style>
/* ----------- Nouveau style des listes abonnés/abonnements ----------- */
.profile-follow-panel {
  background: #faf8ff;
  border-radius: 16px;
  box-shadow: 0 2px 10px #0001;
  padding: 18px 14px;
  margin-bottom: 32px;
  display: flex;
  gap: 36px;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.profile-follow-list {
  min-width: 220px;
  max-width: 340px;
}
.profile-follow-list h4 {
  margin-bottom: 12px;
  color: #6d38a8;
  font-size: 1.08em;
  letter-spacing: 0.5px;
}
.profile-follow-list ul {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 12px;
  list-style: none;
  padding: 0;
  margin: 0;
}
.profile-follow-list li {
  display: flex;
  align-items: center;
  background: #f2ecfa;
  padding: 7px 9px;
  border-radius: 10px;
  box-shadow: 0 1px 5px #0001;
  transition: background .17s, box-shadow .15s;
}
.profile-follow-list li:hover {
  background: #e3d9fa;
  box-shadow: 0 2px 12px #b39ddb33;
}
.profile-follow-list img {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  margin-right: 9px;
  box-shadow: 0 1px 5px #0001;
  object-fit: cover;
  background: #fff;
}
.profile-follow-list .username {
  font-weight: 500;
  color: #312262;
  text-decoration: none;
  font-size: 1em;
  transition: color .15s;
}
.profile-follow-list a.username:hover {
  color: #ff6b6b;
  text-decoration: underline;
}
/* ----------- Ancien style et reste ----------- */
.profile-lists ul {
  list-style: none;
  padding: 0;
  margin: 0;
}
.profile-lists li {
  margin-bottom: 7px;
}
.profile-lists img {
  box-shadow: 0 1px 5px #0001;
}
.user-posts-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 32px;
  margin-top: 32px;
}
.user-post-card {
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 2px 16px #0001, 0 0 0 1px #ececec;
  max-width: 270px;
  min-width: 220px;
  padding: 0 0 10px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: box-shadow 0.18s;
}
.user-post-card:hover {
  box-shadow: 0 4px 32px #0002, 0 0 0 2px #d1c4e9;
}
.user-post-img {
  width: 100%;
  border-radius: 18px 18px 0 0;
  object-fit: cover;
  max-height: 220px;
  min-height: 140px;
  background: #fafafa;
  margin-bottom: 12px;
}
.user-post-caption {
  font-size: 1em;
  padding: 0 12px;
  margin-bottom: 6px;
  color: #222;
  width: 100%;
  text-align: left;
}
.user-post-caption strong {
  color: #6d38a8;
}
.user-post-link {
  color: #6d38a8;
  text-decoration: underline;
  font-size: .97em;
  font-weight: 500;
  transition: color .16s;
  margin-bottom: 8px;
}
.user-post-link:hover {
  color: #c2185b;
}
.btn-follow {
  background: #2d87f0; color: #fff; padding: 6px 14px; border-radius: 4px; border:none; cursor:pointer;
}
.btn-unfollow {
  background: #ccc; color: #333; padding: 6px 14px; border-radius: 4px; border:none; cursor:pointer;
}
</style>
<main class="container">
  <div class="profile-header">
    <img src="<%= user.avatar || '/images/default-avatar.jpg' %>" alt="Avatar" style="width:100px;height:100px;border-radius:50%;">
    <div class="profile-info">
      <h2><%= user.username %></h2>
      <div class="profile-stats">
        <div class="profile-stat">
          <strong><%= posts.length %></strong> publications
        </div>
        <div class="profile-stat">
          <strong><%= user.followers ? user.followers.length : 0 %></strong> abonnés
        </div>
        <div class="profile-stat">
          <strong><%= user.following ? user.following.length : 0 %></strong> abonnements
        </div>
      </div>
      <% if (currentUser && currentUser._id.toString() !== user._id.toString()) { %>
        <% 
          const isFollowing = user.followers.some(f => 
            (f._id ? f._id.toString() : f.toString()) === currentUser._id.toString()
          );
        %>
        <% if (isFollowing) { %>
          <form action="/unfollow/<%= user._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn-unfollow">Se désabonner</button>
          </form>
        <% } else { %>
          <form action="/follow/<%= user._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn-follow">S’abonner</button>
          </form>
        <% } %>
      <% } %>
    </div>
  </div>
  <!-- LISTES ABONNÉS/ABONNEMENTS JOLIES -->
  <div class="profile-follow-panel">
    <div class="profile-follow-list">
      <h4>Abonnés (<%= user.followers ? user.followers.length : 0 %>)</h4>
      <% if (user.followers && user.followers.length > 0) { %>
        <ul>
          <% user.followers.forEach(f => { %>
            <li>
              <a href="/user/<%= f._id %>">
                <img src="<%= f.avatar || '/images/default-avatar.jpg' %>" alt="avatar">
              </a>
              <a href="/user/<%= f._id %>" class="username"><%= f.username %></a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <span style="color:#999;">Aucun abonné.</span>
      <% } %>
    </div>
    <div class="profile-follow-list">
      <h4>Abonnements (<%= user.following ? user.following.length : 0 %>)</h4>
      <% if (user.following && user.following.length > 0) { %>
        <ul>
          <% user.following.forEach(f => { %>
            <li>
              <a href="/user/<%= f._id %>">
                <img src="<%= f.avatar || '/images/default-avatar.jpg' %>" alt="avatar">
              </a>
              <a href="/user/<%= f._id %>" class="username"><%= f.username %></a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <span style="color:#999;">Aucun abonnement.</span>
      <% } %>
    </div>
  </div>
  <!-- FIN LISTES -->

  <div class="user-posts-grid">
    <% if (posts.length === 0) { %>
      <p>Aucune publication pour le moment.</p>
    <% } %>
    <% posts.forEach(function(post) { %>
      <div class="user-post-card">
        <% if (post.images && post.images[0]) { %>
          <img src="<%= post.images[0] %>" class="user-post-img" alt="Photo">
        <% } %>
        <div class="user-post-caption">
          <strong><%= user.username %></strong>
          <span><%= post.caption %></span>
        </div>
        <a href="/post/<%= post._id %>" class="user-post-link">Voir le post</a>
      </div>
    <% }); %>
  </div>
</main>
<%- include('partials/footer') %>
